<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Forgot your password?</h3>
                </div>
                <div class="panel-body">

                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                        <fieldset>
                            <%= devise_error_messages! %>

                            <div class="form-group"><%= f.label :email %><br />
                                <%= f.email_field :email, autofocus: true %></div>

                            <%= link_to "Back", new_user_session_path, class: "btn btn-default" %>
                            <%= f.submit "Email password instructions", class:"btn btn-lg btn-success" %>
                        </fieldset>
                    <% end %>

                </div>
            </div>
        </div>
    </div>
</div>
