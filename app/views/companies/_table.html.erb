<div class="panel">
<div class="panel-body">
    <% if not title.nil? %>
        <h4><%= title %></h4>
    <% end %>
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Rating</th>
                <th>Phone number</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% items.each do |item| %>
                <% company = item[:permitable] %>
                <% rating = item[:rating] %>
                <tr>
                    <td><%= company.name %></td>
                    <% if rating.nil? then %>
                        <td><i>None Provided</i></td>
                    <% else %>
                        <td><%= rating.round(2) %></td>
                    <% end %>
                    <% if company.phone_number.nil? then %>
                        <td><i>None Provided</i></td>
                    <% else %>
                        <td><%= company.phone_number %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
</div>
