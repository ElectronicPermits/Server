<h1>Listing ratings</h1>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Comments</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.rating %></td>
        <td><%= rating.comments %></td>
        <td><%= link_to 'Show', rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>

