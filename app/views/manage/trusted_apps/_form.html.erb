<%= form_for [:manage, @trusted_app] do |f| %>
    <% if @trusted_app.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@trusted_app.errors.count, "error") %> prohibited this trusted_app from being saved:</h2>

            <ul>
                <% @trusted_app.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-horizontal center-block">
        <div class="form-group"><div class="col-sm-3 center-block">
                <%= f.label :app_name %><br>
                <%= f.text_field :app_name, id: "name", class: "form-control" %>
            </div>
        </div>
        <div class="form-group"><div class="col-sm-3">
                <%= f.label :description %><br>
                <%= f.text_field :description, id: "description", class: "form-control" %>
            </div>
        </div>
        <div class="form-group"><div class="col-sm-3">
                Authentication Code<br>
                <!-- Generate randomly -->
                <!-- TODO -->
                <% if @trusted_app.sha_hash.nil? %>
                <%= f.text_field :sha_hash, id: "sha_hash", class: "form-control" %>
            </div>
        </div>

        <div class="actions">
            <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
    </div>
<% end %>
