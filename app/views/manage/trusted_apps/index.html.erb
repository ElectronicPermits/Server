<section id="home" name="home"></section>
<div id="headerwrap">
    <div class="container">
        <div class="row centered">
            <div class="col-lg-12">
                <h1>Trusted Apps</h1>
                <h3>Rating and Recording Enabled Apps</h3>
                <br>
            </div>

        </div>
    </div> <!--/ .container -->
</div><!--/ #headerwrap -->

<% if @trusted_apps.length > 10 %>
    <%= render partial: "table", locals: {trusted_apps: @trusted_apps} %>
<% else %>
<% rowLength = 4 %>
<% itemNumber = 0 %>
<% totalItemCount = @trusted_apps.length %>
<div class="panel-container">
<% @trusted_apps.each do |trusted_app| %>
    <% if itemNumber % rowLength == 0 then %>
        <div class="row">
    <% end %>

    <%= render partial: "panel", locals: {trusted_app: trusted_app} %>

    <% if itemNumber % rowLength == 3 or itemNumber+1 == totalItemCount then %>
        </div>
    <% end %>
    <% itemNumber += 1 %>
<% end %>
</div>
<% end %>

<div class="text-center">
<%= link_to "Add App", new_manage_trusted_app_path, id: "add_new_app", class: "btn btn-success" %>
</div>
<br>
