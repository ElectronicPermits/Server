<h1>Listing trusted_apps</h1>

<table>
  <thead>
    <tr>
      <th>App name</th>
      <th>Description</th>
      <th>Sha hash</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trusted_apps.each do |trusted_app| %>
      <tr>
        <td><%= trusted_app.app_name %></td>
        <td><%= trusted_app.description %></td>
        <td><%= trusted_app.sha_hash %></td>
        <td><%= link_to "Show", manage_trusted_app_path(trusted_app.id), id: "show_#{trusted_app.id}"%></td>
        <td><%= link_to "Edit", edit_manage_trusted_app_path(trusted_app.id), id: "edit_#{trusted_app.id}"%></td>
        <td><%= link_to 'Destroy', manage_trusted_app_path(trusted_app), id: "delete_trusted_app_#{trusted_app.id.to_s}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Sign out', destroy_user_session_path, :id => 'sign_out', :method => :delete %>
